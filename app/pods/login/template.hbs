<section class="login-container container">
  <div class="row">
    <div class="col s12 m8 offset-m2 l6 offset-l3">
      <div class="col s12 z-depth-5 card-panel">
        <form class="login-form" {{action 'authenticate' on='submit'}}>
          <h2 class="center-align">NVM</h2>

          {{#if loginErrorMessage}}
            <div class="row login-errors">
              <div class="red darken-3  col s12">
                <div class="error-message">
                  {{loginErrorMessage}}
                </div>
              </div>
            </div>
          {{/if}}

          <div class="row">
            <div class="col s12">
              {{md-input value=identification placeholder='Email' label='Email' type='email' class="col s12" validate=true disabled=loading required='required'}}
            </div>
          </div>
          <div class="row">
            <div class="col s12">
              {{md-input value=password placeholder='Password' label='Password' type='password' class="col s12" validate=true disabled=loading required='required'}}
            </div>
          </div>
          <div class="row actions">
            <div class="input-field col s12">
              <button type="submit" class="btn waves-effect waves-light col s12">Login</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
