<section class='container'>
  <div class="row">
  	<div class="col s12 m8 offset-m2 l6 offset-l3">
			<form class="new-photo-form col s12" {{action 'authenticate' on='submit'}}>
        <div class="row"></div>
        <div class="row">
          <div class="file-field input-field">
            <div class="btn">
              <span>File</span>
              {{input-component/file file=model.image prompt='Select an image...'}}
            </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" type="text">
            </div>
          </div>
        </div>
        <div class="row">
          {{md-textarea label='Description' value=model.description class="col s12"}}
        </div>
        <div class="row">
          {{md-input-date label='Took at' value=model.tookAt class="col s12"}}
        </div>
			  <div class="actions">
			  	{{md-btn text='Create Photo' action='save'}}
			  </div>
			</form>
  	</div>
  </div>
</section>